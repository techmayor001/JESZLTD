function openApproveMemberModal(memberName = "Sarah Johnson", membershipType = "club") {
    // Set values inside the modal
    document.querySelector('#approveMemberModal input[type="text"]').value = memberName;
    document.querySelector('#approveMemberModal select').value = membershipType;

    // Open modal using Bootstrap's modal API
    let modal = new bootstrap.Modal(document.getElementById('approveMemberModal'));
    modal.show();
}

// Approve member function
function approveMember() {
    let name = document.querySelector('#approveMemberModal input[type="text"]').value;
    let membership = document.querySelector('#approveMemberModal select').value;
    let notes = document.querySelector('#approveMemberModal textarea').value;

    // Example: Do something (AJAX request, console log, etc.)
    console.log("Approving member:");
    console.log("Name:", name);
    console.log("Type:", membership);
    console.log("Notes:", notes);

    // Close modal after approving
    let modal = bootstrap.Modal.getInstance(document.getElementById('approveMemberModal'));
    modal.hide();
}
</script>


