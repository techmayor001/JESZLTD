                                <td><span class="badge bg-warning-subtle text-warning">10%</span></td>
                                <td>3 months</td>
                                <td><span class="badge bg-secondary">Rejected</span></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-info" onclick="viewLoanDetails('NCDS045-001')" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <small class="fw-semibold">Nov 12, 2025</small>
                                </td>
                                <td>
                                    <div class="fw-semibold">Patricia White</div>
                                    <small class="text-muted">CDS156</small>
                                </td>
                                <td><span class="badge bg-success">Club</span></td>
                                <td class="fw-bold">₦250,000</td>
                                <td><small>Equipment purchase</small></td>
                                <td><span class="badge bg-info-subtle text-info">5%</span></td>
                                <td>9 months</td>
                                <td><span class="badge bg-primary">Rollover</span></td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <button class="btn btn-info" onclick="viewLoanDetails('CDS156-001')" title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </button>
                                        <button class="btn btn-warning" onclick="processRollover('CDS156-001')" title="Process Rollover">
                                            <i class="fas fa-sync-alt"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="card-footer">
                <nav>
                    <ul class="pagination pagination-sm mb-0 justify-content-center">
                        <li class="page-item disabled"><a class="page-link" href="#">Previous</a></li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

