<!-- Top Navbar -->
<div class="top-navbar">
    <i class="fas fa-bars d-lg-none me-3"
       style="cursor: pointer; color: var(--primary); font-size: 1.5rem;"
       onclick="document.getElementById('sidebar').classList.toggle('active')"></i>

    <!-- This will only show on lg and above -->
    <div class="flex-grow-1 d-none d-lg-block">
        <h5 class="mb-0 fw-bold" style="color: var(--primary)">Welcome back, <%= user.firstName %>! ðŸ‘‹</h5>
        <small class="text-muted">
            Member ID: <%= user.membershipID %> | <%= new Date(user.createdAt).toLocaleDateString('en-US', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %>
        </small>
    </div>
</div>
    <!-- Main Content -->
    <div class="main-content">
        <!-- Statistics -->
        <div class="stats-row">
            <div class="stat-box">
                <div class="text-success"><i class="fas fa-arrow-down"></i></div>
                <h4 class="text-success">â‚¦<%= totalDeposits.toLocaleString() %></h4>
                <small>Total Deposits</small>
            </div>
            <div class="stat-box">
                <div class="text-danger"><i class="fas fa-arrow-up"></i></div>
                <h4 class="text-danger">â‚¦<%= totalWithdrawals.toLocaleString() %></h4>
                <small>Total Withdrawals</small>
            </div>
            <div class="stat-box">
                <div class="text-warning"><i class="fas fa-hand-holding-usd"></i></div>
                <h4 class="text-warning">â‚¦<%= totalLoanPayments.toLocaleString() %></h4>
                <small>Loan Payments</small>
            </div>
            <div class="stat-box">
                <div class="text-info"><i class="fas fa-percentage"></i></div>
                <h4 class="text-info">â‚¦<%= roiEarned.toLocaleString() %></h4>
                <small>ROI Earned</small>
            </div>
        </div>

        <!-- Filters -->
        <div class="filter-card">
            <div class="row g-3 align-items-end">
                <div class="col-md-3 col-6">
                    <label class="form-label">Transaction Type</label>
                    <select class="form-select" id="filterType" onchange="filterTransactions()">
                        <option value="all">All Transactions</option>
                        <option value="deposit">Deposits</option>
                        <option value="withdrawal">Withdrawals</option>
                        <option value="loan">Loans</option>
                        <option value="payment">Loan Payments</option>
                        <option value="roi">ROI Credits</option>
                    </select>
                </div>
                <div class="col-md-3 col-6">
                    <label class="form-label">Status</label>
                    <select class="form-select" id="filterStatus" onchange="filterTransactions()">
                        <option value="all">All Status</option>
                        <option value="completed">Completed</option>
                        <option value="pending">Pending</option>
                        <option value="failed">Failed</option>
                    </select>
                </div>
                <div class="col-md-3 col-6">
                    <label class="form-label">Date Range</label>
                    <select class="form-select" id="filterDate" onchange="filterTransactions()">
                        <option value="all">All Time</option>
                        <option value="today">Today</option>
                        <option value="week">This Week</option>
                        <option value="month">This Month</option>
                        <option value="year">This Year</option>
                    </select>
                </div>
                <div class="col-md-3 col-6">
                    <button class="btn btn-outline-primary w-100" onclick="resetFilters()">
                        <i class="fas fa-redo me-2"></i>Reset
                    </button>
                </div>
            </div>
        </div>

        <!-- Transactions List -->
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-list me-2" style="color: var(--primary);"></i>Recent Transactions</h5>
            </div>
            <div class="card-body p-0" id="transactionsList">
                <!-- Transaction Items will be populated here -->
            </div>
        </div>
    </div>

    <!-- Powered By Footer -->
    <div class="powered-by">
        Powered by <strong style="color: var(--primary);">JESZ LIMITED</strong>
    </div>

    <!-- Transaction Detail Modal -->
    <div class="modal" id="transactionModal">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title"><i class="fas fa-receipt me-2"></i>Transaction Details</h5>
                    <button type="button" class="btn-close" onclick="closeModal()"></button>
                </div>
                <div class="modal-body print-content" id="transactionDetail">
                    <!-- Transaction details will be populated here -->
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="closeModal()">Close</button>
                    <button type="button" class="btn btn-primary" onclick="printReceipt()">
                        <i class="fas fa-print me-2"></i>Print Receipt
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
<script>
    // Backend transactions
    const transactions = <%- JSON.stringify(transactions) %>;
    let filteredTransactions = [...transactions];

    // Utility functions (icons, classes, date formatting)
    function getTransactionIcon(type) {
        const icons = {
            deposit: '<i class="fas fa-arrow-down"></i>',
            withdrawal: '<i class="fas fa-arrow-up"></i>',
            loan_payment: '<i class="fas fa-hand-holding-usd"></i>'
        };
        return icons[type] || '<i class="fas fa-exchange-alt"></i>';
    }

    function getTransactionClass(type) {
        const classes = {
            deposit: 'deposit-icon',
            withdrawal: 'withdrawal-icon',
            loan_payment: 'payment-icon'
        };
        return classes[type] || 'deposit-icon';
    }

    function formatDate(dateString) {
        const date = new Date(dateString);
        return date.toLocaleDateString('en-US', { 
            month: 'short', 
            day: 'numeric', 
            year: 'numeric',
            hour: '2-digit',
            minute: '2-digit'
        });
    }

    // Main render function
    function renderTransactions() {
        const container = document.getElementById('transactionsList');
        
        if (filteredTransactions.length === 0) {
            container.innerHTML = `
                <div class="empty-state text-center py-3">
                    <i class="fas fa-inbox fa-2x"></i>
                    <p class="mt-2">No transactions found</p>
                </div>
            `;
            return;
        }

        container.innerHTML = filteredTransactions.map(txn => `
            <div class="transaction-item" onclick="showTransactionDetail('${txn._id}')">
                <div class="transaction-content">
                    <div class="transaction-icon ${getTransactionClass(txn.type)}">
                        ${getTransactionIcon(txn.type)}
                    </div>
                    <div class="transaction-details">
                        <h6>${txn.description || txn.type.replace('_', ' ')}</h6>
                        <div class="transaction-meta">
                            <i class="fas fa-calendar me-1"></i>${formatDate(txn.createdAt)}
                            <span class="mx-1">â€¢</span>
                            <i class="fas fa-hashtag me-1"></i>${txn.reference || '-'}
                        </div>
                    </div>
                    <div class="transaction-amount-section">
                        <div class="transaction-amount ${txn.type === 'withdrawal' || txn.type === 'loan_payment' ? 'negative' : 'positive'}">
                            ${txn.type === 'withdrawal' || txn.type === 'loan_payment' ? '-' : '+'}â‚¦${txn.amount.toLocaleString()}
                        </div>
                        <span class="status-badge status-${txn.status || 'pending'}">${txn.status || 'pending'}</span>
                    </div>
                </div>
            </div>
        `).join('');
    }

    // Filter logic
    function filterTransactions() {
        const typeFilter = document.getElementById('filterType').value;
        const statusFilter = document.getElementById('filterStatus').value;
        const dateFilter = document.getElementById('filterDate').value;

        filteredTransactions = transactions.filter(txn => {
            // Type filter
            let typeMatch = true;
            if (typeFilter === 'deposit') typeMatch = txn.type === 'deposit';
            if (typeFilter === 'withdrawal') typeMatch = txn.type === 'withdrawal';
            if (typeFilter === 'payment') typeMatch = txn.type === 'loan_payment';
            if (typeFilter === 'loan') typeMatch = false; // no loan type in transactions table
            if (typeFilter === 'roi') typeMatch = false; // no roi type in transactions table
            if (typeFilter === 'all') typeMatch = true;

            // Status filter
            const statusMatch = statusFilter === 'all' ? true : (txn.status === statusFilter);

            // Date filter
            const now = new Date();
            const txnDate = new Date(txn.createdAt);
            let dateMatch = true;

            if (dateFilter === 'today') {
                dateMatch = txnDate.toDateString() === now.toDateString();
            } else if (dateFilter === 'week') {
                const startOfWeek = new Date(now.setDate(now.getDate() - now.getDay()));
                dateMatch = txnDate >= startOfWeek;
            } else if (dateFilter === 'month') {
                dateMatch = txnDate.getMonth() === now.getMonth() && txnDate.getFullYear() === now.getFullYear();
            } else if (dateFilter === 'year') {
                dateMatch = txnDate.getFullYear() === now.getFullYear();
            }

            return typeMatch && statusMatch && dateMatch;
        });

        renderTransactions();
    }

    // Reset filters
    function resetFilters() {
        document.getElementById('filterType').value = 'all';
        document.getElementById('filterStatus').value = 'all';
        document.getElementById('filterDate').value = 'all';
        filteredTransactions = [...transactions];
        renderTransactions();
    }

    // Show transaction detail modal
    function showTransactionDetail(txnId) {
        const txn = transactions.find(t => t._id === txnId);
        if (!txn) return;

        const detailHtml = `
            <div class="receipt">
                <div class="receipt-header">
                    <h4>CLUB DE STARS</h4>
                    <p>Multipurpose Cooperative Society Limited</p>
                    <p style="font-size: 0.75rem;">Powered by JESZ LIMITED</p>
                </div>
                <div class="receipt-amount-section">
                    <div class="transaction-icon ${getTransactionClass(txn.type)}">
                        ${getTransactionIcon(txn.type)}
                    </div>
                    <h5>${txn.description || txn.type.replace('_', ' ')}</h5>
                    <h2>${txn.type === 'withdrawal' || txn.type === 'loan_payment' ? '-' : '+'}â‚¦${txn.amount.toLocaleString()}</h2>
                </div>
                <div class="receipt-row">
                    <span class="receipt-label">Transaction ID</span>
                    <span class="receipt-value">${txn._id}</span>
                </div>
                <div class="receipt-row">
                    <span class="receipt-label">Reference</span>
                    <span class="receipt-value">${txn.reference || '-'}</span>
                </div>
                <div class="receipt-row">
                    <span class="receipt-label">Date & Time</span>
                    <span class="receipt-value">${formatDate(txn.createdAt)}</span>
                </div>
                <div class="receipt-row">
                    <span class="receipt-label">Type</span>
                    <span class="receipt-value" style="text-transform: capitalize;">${txn.type.replace('_', ' ')}</span>
                </div>
                <div class="receipt-row">
                    <span class="receipt-label">Method</span>
                    <span class="receipt-value">${txn.method || '-'}</span>
                </div>
                ${txn.loanId ? `
                <div class="receipt-row">
                    <span class="receipt-label">Loan ID</span>
                    <span class="receipt-value">${txn.loanId}</span>
                </div>` : ''}
                <div class="receipt-row">
                    <span class="receipt-label">Status</span>
                    <span class="status-badge status-${txn.status || 'pending'}">${txn.status || 'pending'}</span>
                </div>
                <div class="receipt-footer">
                    <p><i class="fas fa-shield-alt"></i> This is an official transaction receipt</p>
                    <p style="font-size: 0.75rem;">Generated on ${new Date().toLocaleString()}</p>
                </div>
            </div>
        `;
        document.getElementById('transactionDetail').innerHTML = detailHtml;
        document.getElementById('transactionModal').classList.add('show');
    }

    function closeModal() {
        document.getElementById('transactionModal').classList.remove('show');
    }

    // Initialize
    document.addEventListener('DOMContentLoaded', function() {
        renderTransactions();
        document.getElementById('transactionModal').addEventListener('click', function(e) {
            if (e.target === this) closeModal();
        });
    });
</script>

    <script>
    // Close sidebar when clicking outside (for mobile view)
    document.addEventListener('click', function (event) {
        const sidebar = document.getElementById('sidebar');
        const toggleButton = document.querySelector('.fa-bars');

        // Only apply this behavior on small screens
        if (window.innerWidth <= 992) {
            // If sidebar is active and click is outside sidebar and toggle button â†’ close it
            if (sidebar.classList.contains('active') &&
                !sidebar.contains(event.target) &&
                !toggleButton.contains(event.target)) {
                sidebar.classList.remove('active');
            }
        }
    });
</script>
