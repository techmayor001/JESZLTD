        if (amount > maxLoan) {
            alert(`Loan amount exceeds your max eligible amount of â‚¦${maxLoan.toLocaleString()}`);
            document.getElementById('calcAmount').value = maxLoan;
            return;
        }

        // Interest for ONE MONTH ONLY
        const interest = (amount * rate) / 100;

        // Total repayment
        const total = amount + interest;

        // Monthly payment
        const monthly = total / duration;

        document.getElementById('calcResult').style.display = 'block';
        document.getElementById('monthlyPay').textContent = 'â‚¦' + monthly.toLocaleString('en-NG', { maximumFractionDigits: 2 });
        document.getElementById('totalInt').textContent = 'â‚¦' + interest.toLocaleString('en-NG', { maximumFractionDigits: 2 });
        document.getElementById('totalRep').textContent = 'â‚¦' + total.toLocaleString('en-NG', { maximumFractionDigits: 2 });
