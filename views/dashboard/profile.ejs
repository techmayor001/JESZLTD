                    <img src="/media/assets/logo/log.png" alt="" width="100%" height="100%">
                </div>
                <div>
                    <h5 class="mb-0 fw-bold" style="text-transform: uppercase;">Club De Stars</h5>
                    <small class="opacity-75">COOPERATIVE SOCIETY LIMITED</small>
                </div>
            </div>
            <div class="member-badge mt-2 <%= user.membershipID.startsWith('CD') ? 'club-member-badge' : 'non-club-member-badge' %>">
                <i class="fas <%= user.membershipID.startsWith('CD') ? 'fa-star' : 'fa-user' %>"></i>
                <span><%= user.membershipID.startsWith('CD') ? 'Club Member' : 'Non-Club Member' %></span>
            </div>

        </div>
        <div class="sidebar-menu">
            <a href="/club-de-star-cooperative/dashboard">
                <i class="fas fa-home"></i> Dashboard
            </a>
            <a href="/club-de-star-cooperative/transaction">
                <i class="fas fa-exchange-alt"></i> Transactions
            </a>
            <!-- <a href="#" onclick="showSection('savings', event)">
                <i class="fas fa-piggy-bank"></i> My Savings
            </a> -->
            <a href="/club-de-star-cooperative/loan">
                <i class="fas fa-hand-holding-usd"></i> My Loans
            </a>

            <a href="/club-de-star-cooperative/guarantorRequest">
                <i class="fas fa-user-friends"></i> Guarantor Requests
                <% 
                const pendingCount = user.guarantorRequests
                    ? user.guarantorRequests.filter(r => r.status === "pending").length
                    : 0; 
                %>
                <% if (pendingCount > 0) { %>
                    <span class="badge bg-danger ms-2"><%= pendingCount %></span>
                <% } %>
            </a>


            <a href="/club-de-star-cooperative/roiCalculator">
                <i class="fas fa-chart-line"></i> ROI Calculator
            </a>
            <a href="/club-de-star-cooperative/profile" class="active">
                <i class="fas fa-user-circle"></i> My Profile
            </a>
            <a href="/club-de-star-cooperative/referral">
                <i class="fas fa-users"></i> Referral Program
            </a>
            <a href="/club-de-star-cooperative/memberContract">
                <i class="fas fa-file-contract"></i> Terms & Conditions
            </a>
            <a href="/logout" class="mt-3" style="color: rgba(255,255,255,0.6);">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </div>

    <!-- Top Navbar -->
    <div class="top-navbar">
        <i class="fas fa-bars d-lg-none me-3"
           style="cursor: pointer; color: var(--primary); font-size: 1.5rem;"
           onclick="document.getElementById('sidebar').classList.toggle('active')"></i>

        <div class="flex-grow-1 d-none d-lg-block">
            <h5 class="mb-0 fw-bold" style="color: var(--primary)">My Profile</h5>
            <small class="text-muted">Manage your personal information and settings</small>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Profile Header Card -->
        <div class="card">
         <div class="card-body text-center py-5">
    <div class="profile-avatar mb-3">
        <% if (user.displayPicture) { %>
            <img src="<%= user.displayPicture.replace('public\\', '/').replace(/\\/g, '/') %>" 
                 alt="Profile Photo" 
                 class="rounded-circle" 
                 style="width:100px; height:100px; object-fit:cover;">
        <% } else { %>
            <span><%= user.firstName.charAt(0) + user.lastName.charAt(0) %></span>
        <% } %>
        <div class="edit-avatar-btn" onclick="openModal('avatarModal')">
            <i class="fas fa-camera"></i>
        </div>
    </div>

    <h3 class="fw-bold mb-1"><%= user.firstName %> <%= user.lastName %></h3>
    <p class="text-muted mb-3">Member ID: <%= user.membershipID %></p>

    <div class="d-flex justify-content-center gap-2 flex-wrap">
        <% 
            let memberBadgeClass = "status-badge bg-light text-secondary";
            let memberBadgeText = "Pending Member";
            if (user.status === "active") {
                memberBadgeClass = "status-badge status-active";
                memberBadgeText = "Active Member";
            } else if (user.status === "rejected") {
                memberBadgeClass = "status-badge bg-danger text-white";
                memberBadgeText = "Rejected Member";
            }
        %>
        <span class="<%= memberBadgeClass %>">
            <i class="fas fa-check-circle me-1"></i><%= memberBadgeText %>
        </span>

        <% 
            let kycBadgeClass = "status-badge bg-light text-secondary";
            let kycBadgeText = "KYC Pending ✗";
            if (user.Payment && user.Payment.status === "paid") {
                kycBadgeClass = "status-badge" // your existing KYC verified style
                kycBadgeText = "KYC Verified ✓";
            }
        %>
        <span class="<%= kycBadgeClass %>" style="<%= user.Payment && user.Payment.status === 'paid' ? 'background: linear-gradient(135deg, #dbeafe 0%, #bfdbfe 100%); color: #1e40af;' : '' %>">
            <i class="fas fa-shield-alt me-1"></i><%= kycBadgeText %>
        </span>
    </div>
</div>

        </div>

        <div class="row g-4">
            <!-- Personal Information -->
          <div class="col-lg-8">
  <!-- Personal Information -->
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0 fw-bold" style="color: var(--primary);">
        <i class="fas fa-user me-2"></i>Personal Information
      </h5>
      <button class="btn btn-outline-primary btn-sm" onclick="openModal('editProfileModal')">
        <i class="fas fa-edit me-2"></i>Edit Profile
      </button>
    </div>
    <div class="card-body">
      <div class="info-row">
        <span class="info-label"><i class="fas fa-user"></i>Full Name</span>
        <span class="info-value"><%= user.firstName %> <%= user.lastName %></span>
      </div>
      <div class="info-row">
        <span class="info-label"><i class="fas fa-envelope"></i>Email Address</span>
        <span class="info-value"><%= user.email %></span>
      </div>
      <div class="info-row">
        <span class="info-label"><i class="fas fa-phone"></i>Phone Number</span>
        <span class="info-value"><%= user.phone %></span>
      </div>
      <div class="info-row">
        <span class="info-label"><i class="fas fa-calendar"></i>Date of Birth</span>
        <span class="info-value"><%= new Date(user.dob).toLocaleDateString('en-US', { year:'numeric', month:'long', day:'numeric' }) %></span>
      </div>
      <div class="info-row">
        <span class="info-label"><i class="fas fa-map-marker-alt"></i>Address</span>
        <span class="info-value"><%= user.address %></span>
      </div>
    </div>
  </div>

  <div class="card">
    <div class="card-header">
        <h5 class="mb-0 fw-bold" style="color: var(--primary);">
            <i class="fas fa-building me-2"></i>Account Information
        </h5>
    </div>
    <div class="card-body">
        <div class="info-row">
            <span class="info-label">
                <i class="fas fa-id-card"></i>
                Membership ID
            </span>
            <span class="info-value"><%= user.membershipID || 'N/A' %></span>
        </div>
        <div class="info-row">
            <span class="info-label">
                <i class="fas fa-star"></i>
                Account Type
            </span>
            <span class="info-value"><%= user.account?.accountType || 'N/A' %></span>
        </div>
        <div class="info-row">
            <span class="info-label">
                <i class="fas fa-calendar-check"></i>
                Member Since
            </span>
            <span class="info-value"><%= user.createdAt.toLocaleDateString('en-US', { month: 'long', year: 'numeric' }) %></span>
        </div>
        <div class="info-row">
            <span class="info-label">
                <i class="fas fa-percentage"></i>
                Loan Interest Rate
            </span>
            <span class="info-value"><%= user.account?.interestRate || 0 %>% p.a.</span>
        </div>
        <div class="info-row">
            <span class="info-label">
                <i class="fas fa-shield-check"></i>
                Account Status
            </span>
            <span class="status-badge <%= user.account?.status === 'active' ? 'status-active' : 'status-inactive' %>">
                <%= user.account?.status?.charAt(0).toUpperCase() + user.account?.status?.slice(1) || 'Inactive' %>
            </span>
        </div>
    </div>
</div>


  <!-- Bank Details -->
  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h5 class="mb-0 fw-bold" style="color: var(--primary);">
        <i class="fas fa-university me-2"></i>Bank Details
      </h5>
      <button class="btn btn-outline-primary btn-sm" onclick="openModal('editBankModal')">
        <i class="fas fa-edit me-2"></i>Update
      </button>
    </div>
    <div class="card-body">
      <div class="info-row">
        <span class="info-label"><i class="fas fa-university"></i>Bank Name</span>
        <span class="info-value"><%= user.bankDetails?.bankName || 'N/A' %></span>
      </div>
      <div class="info-row">
        <span class="info-label"><i class="fas fa-credit-card"></i>Account Number</span>
        <span class="info-value"><%= user.bankDetails?.accountNumber || 'N/A' %></span>
      </div>
      <div class="info-row">
        <span class="info-label"><i class="fas fa-user-tag"></i>Account Name</span>
        <span class="info-value"><%= user.bankDetails?.accountName || 'N/A' %></span>
      </div>
    </div>
  </div>

<!-- NEXT OF KIN DETAILS -->
