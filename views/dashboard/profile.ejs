                accountNameInput.classList.add('is-invalid');
                console.warn(data.error);
            }
        } catch(err) {
            console.error(err);
        }
    } else {
        document.getElementById('accountName').value = '';
        document.getElementById('accountName').classList.remove('is-valid', 'is-invalid');
    }
}

