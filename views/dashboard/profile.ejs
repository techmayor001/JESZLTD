  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0 fw-bold" style="color: var(--primary);">
      <i class="fas fa-user-friends me-2"></i>Next of Kin Details
    </h5>
    <button class="btn btn-outline-primary btn-sm" onclick="openModal('editNextOfKinModal')">
      <i class="fas fa-edit me-2"></i>Edit
    </button>
  </div>

  <div class="card-body">

    <div class="info-row">
      <span class="info-label"><i class="fas fa-user"></i> Full Name</span>
      <span class="info-value"><%= user.nextOfKin?.fullName || 'N/A' %></span>
    </div>

    <div class="info-row">
      <span class="info-label"><i class="fas fa-link"></i> Relationship</span>
      <span class="info-value"><%= user.nextOfKin?.relationship || 'N/A' %></span>
    </div>

    <div class="info-row">
      <span class="info-label"><i class="fas fa-phone"></i> Phone</span>
      <span class="info-value"><%= user.nextOfKin?.phone || 'N/A' %></span>
    </div>

    <div class="info-row">
      <span class="info-label"><i class="fas fa-map-marker-alt"></i> Address</span>
      <span class="info-value"><%= user.nextOfKin?.address || 'N/A' %></span>
    </div>

  </div>
</div>

<!-- EDIT NEXT OF KIN MODAL -->
<div class="modal fade" id="editNextOfKinModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">

      <div class="modal-header">
        <h5 class="modal-title">Edit Next of Kin Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
      </div>

      <form action="/update-next-of-kin" method="POST">
        <div class="modal-body">

          <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" class="form-control" name="fullName" 
              value="<%= user.nextOfKin?.fullName || '' %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Relationship</label>
            <input type="text" class="form-control" name="relationship" 
              value="<%= user.nextOfKin?.relationship || '' %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Phone Number</label>
            <input type="text" class="form-control" name="phone" 
              value="<%= user.nextOfKin?.phone || '' %>" required>
          </div>

          <div class="mb-3">
            <label class="form-label">Address</label>
            <textarea class="form-control" name="address" rows="2" required><%= user.nextOfKin?.address || '' %></textarea>
          </div>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save Changes</button>
        </div>

      </form>

    </div>
  </div>
</div>
<!-- ENDS  -->

</div>


            <!-- Right Sidebar -->
            <div class="col-lg-4">
                <!-- Security Settings -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0 fw-bold" style="color: var(--primary);">
                            <i class="fas fa-shield-alt me-2"></i>Security
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="security-item">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <h6 class="mb-1 fw-bold">Password</h6>
